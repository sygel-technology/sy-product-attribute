<odoo>
    <record id="product_old_migration_fields_product_template_form_view" model="ir.ui.view">
        <field name="name">product.old.migration.fields.product.normal.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook" position='inside'>
                <page string="Migration Info" name="migration_info">
                </page>
            </xpath>
        </field>
    </record>

    <record id="product_old_migration_fields_product_template_only_form_view" model="ir.ui.view">
        <field name="name">product.old.migration.fields.product.template.only.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='migration_info']" position='inside'>
                <group>
                    <group>
                        <field name="old_product_template_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="product_old_migration_fields_product_normal_form_view" model="ir.ui.view">
        <field name="name">product.old.migration.fields.product.normal.form.view</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='migration_info']" position='inside'>
                <group>
                    <group>
                        <field name="old_product_id"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
